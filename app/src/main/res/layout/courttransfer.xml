                android:textSize="@dimen/textsize" />

            <Spinner
                android:id="@+id/spinneritem"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".5"
                android:background="@drawable/spinner"></Spinner>
        </TableRow>
