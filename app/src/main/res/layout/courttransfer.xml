                android:text=":"
                android:textColor="#135B97"
                android:textSize="@dimen/textsize" />

            <Spinner
                android:id="@+id/transferredfrom"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".5"
                android:background="@drawable/spinner"></Spinner>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:weightSum="1">
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/reasonfortransfer"
                    android:textColor="#131416"
                    android:textSize="@dimen/textsize" />
                <TextView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/star"
                    android:textSize="@dimen/textsize" />

            </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text=":"
                android:textColor="#135B97"
                android:textSize="@dimen/textsize" />

            <Spinner
                android:id="@+id/reasonfortransfer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".5"
                android:background="@drawable/spinner"></Spinner>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".4"
                android:textColor="#131416"
                android:text="@string/dateoftransferred"
                android:textSize="@dimen/textsize" />

            <TextView
